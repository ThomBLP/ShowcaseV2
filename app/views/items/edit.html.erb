
<%= simple_form_for @item, url: category_item_path(category_id: @item.category_id, id: @item.id), method: :patch, html: { multipart: true } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.file_field :photos, multiple: true %>
  <%= f.hidden_field :category_id %>
  <%= f.button :submit, "Modifier" %>
<% end %>
